<Window x:Class="CLM_framework_GUI.TextEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection information" Height="100" Width="300">
    <Grid>
        <StackPanel FocusManager.FocusedElement="{Binding ElementName=ResponsePortTextBox}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" Text="Port" FontSize="20"/>
                <TextBox Margin="10,0,0,0" x:Name="ResponsePortTextBox" FontSize="20" Width="120" Text="1400" />
            </StackPanel>
            <Button Margin="0,8,0,0" Content="OK" Click="OKButton_Click" Width="100" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</Window>
