<Window x:Class="CLM_framework_GUI.CameraSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CameraSelection" Height="400" Width="400">

    <Grid Name="camerasPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="60" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="10" HorizontalContentAlignment="Center" FontSize="20">Choose Video Source</Label>
        <!--  Click="OpenFile_Click" -->
        <Button Width="150" Grid.Row="4" Grid.ColumnSpan="10" FontSize="20" Click="Button_Click">Select camera</Button>
    </Grid>

</Window>
