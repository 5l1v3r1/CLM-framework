<Window x:Class="Ophthalm_experiments.TextEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration" Height="150" Width="300">
    <Grid>
        <StackPanel FocusManager.FocusedElement="{Binding ElementName=ResponseTextBox}">
            <TextBlock HorizontalAlignment="Center" Text="Enter patient id" FontSize="20"/> 
            <TextBox x:Name="ResponseTextBox" FontSize="20" Width="120"/>
            
            <CheckBox HorizontalAlignment="Center" x:Name="RecordVideoCheckBox">Record video</CheckBox>
            <CheckBox IsChecked="True" HorizontalAlignment="Center" x:Name="RecordHeadPoseCheckBox">Record head pose</CheckBox>
            
            <Button Content="OK" Click="OKButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
