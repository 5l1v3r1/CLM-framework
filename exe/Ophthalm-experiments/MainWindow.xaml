<Window x:Class="Ophthalm_experiments.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:Ophthalm_experiments="clr-namespace:Ophthalm_experiments"
        Title="Head Pose Experiments" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid Name="MainGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>


        <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center"></Label>

        <Border Canvas.ZIndex="1" Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Background="#ccc" BorderBrush="#FF000000" BorderThickness="0" CornerRadius="8,8,0,0">
            <Label Name="fpsLabel">0 FPS</Label>
        </Border>
        
        <Label Name="RecordLabel" Grid.Row="0" FontSize="15">Recording trial 0</Label>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button  Margin="0,5,0,5" Click="startRecordingButton_Click" Name="RecordingButton">Record</Button>            
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="0">
            <Label Name="headOrientationLabel" Margin="60,0,0,0"></Label>
            <Label Name="headPoseLabel" Margin="60,0,0,0"></Label>
        </StackPanel>

    </Grid>
</Window>
