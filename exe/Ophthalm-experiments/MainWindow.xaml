<Window x:Class="Ophthalm_experiments.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:Ophthalm_experiments="clr-namespace:Ophthalm_experiments"
        Title="Head Pose Experiments" Height="380" Width="525" WindowStartupLocation="CenterScreen">
    <Grid Name="MainGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>


        <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center"></Label>

        <Border Canvas.ZIndex="1" Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Background="#ccc" BorderBrush="#FF000000" BorderThickness="0" CornerRadius="8,8,0,0">
            <Label Name="fpsLabel">0 FPS</Label>
        </Border>
        
        <StackPanel Canvas.ZIndex="1"  Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Background="DarkSalmon" Margin="200,0,0,0" Click="ResetButton_Click" Name="ResetButton">Reset</Button>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button  Margin="0,5,0,5" Click="startRecordingButton_Click" Name="RecordingButton">Record trial 0</Button>            
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,15,0">
            <Label Name="headOrientationLabel" Margin="0,0,0,0" FontSize="12"  HorizontalContentAlignment="Left">Orientation</Label>
            <StackPanel Orientation="Horizontal">
                <Label Margin="5,0,0,0" FontSize="10" Width="35" HorizontalContentAlignment="Left">Yaw:</Label>
                <Label Name="YawLabel" FontSize="10" Width="30" HorizontalContentAlignment="Right">0°</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Margin="5,0,0,0" FontSize="10"  Width="35" HorizontalContentAlignment="Left">Pitch:</Label>
                <Label Name="PitchLabel" FontSize="10" Width="30" HorizontalContentAlignment="Right">0°</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Margin="5,0,0,0" FontSize="10"  Width="35" HorizontalContentAlignment="Left">Roll:</Label>
                <Label Name="RollLabel" FontSize="10" Width="30" HorizontalContentAlignment="Right">0°</Label>
            </StackPanel>
            <Label Name="headPoseLabel" Margin="0,0,0,0" FontSize="12" HorizontalContentAlignment="Left">Pose</Label>
            <StackPanel Orientation="Horizontal">
                <Label Margin="5,0,0,0" FontSize="10" HorizontalContentAlignment="Left"  Width="20">X:</Label>
                <Label Name="XPoseLabel" FontSize="10" HorizontalContentAlignment="Right" Width="50">0 mm</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Margin="5,0,0,0" FontSize="10" HorizontalContentAlignment="Left"  Width="20">Y:</Label>
                <Label Name="YPoseLabel" FontSize="10" HorizontalContentAlignment="Right" Width="50">0 mm</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Margin="5,0,0,0" FontSize="10" HorizontalContentAlignment="Left"  Width="20">Z:</Label>
                <Label Name="ZPoseLabel" FontSize="10" HorizontalContentAlignment="Right" Width="50">0 mm</Label>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button  Margin="0,5,0,5" Click="CompleteButton_Click" Name="CompleteButton" >Finish collection</Button>
        </StackPanel>

    </Grid>
</Window>
